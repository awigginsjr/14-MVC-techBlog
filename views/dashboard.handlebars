{{!-- Dashboard --}}

<div class="container">
    <div class="row">
        <div class="col-md-8">
            {{#each posts}}
            <div class="card mb-3">
                <div class="card-header">
                    <a class="list-item flex-row justify-space-between" href="/dashboard/edit/{{id}}"> 
                        Edit ✍️</a>
                    <div class="header-info">
                        <span class="title"><strong>{{title}}:</strong></span>
                        <span class="date"><em>{{formatDate createdAt}}</em></span>
                    </div>
                </div>
                <div class="card-body">
                    <p class="card-text">{{body}}</p>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>
