<div class="container">
    <div class="row">
        <div class="col-md-8">
            <div class="card mb-3">
                <div class="card-header">
                    <h3>{{post.title}}</h3>
                    <p class="text-muted">Posted by {{post.user.username}} on {{formatDate post.createdAt}}</p>
                    <p class="card-text">{{post.body}}</p>
                </div>
            </div>
        
            {{#if comments.length}}
            <section class="card">
              <div class="card-header">
                <h3>Comments</h3>
              </div>

              <div class="card-body">
                <ul class="list-group">
                  {{#each comments}}
                  {{> comments}}
                  {{/each}}
                </ul>
              </div>
            </section>
            {{/if}}
            {{!-- {{#if loggedIn}} --}}
            {{!-- <h3>Comments</h3>
            <ul class="list-group">
